{
    "name": "spatie/browsershot",
    "description": "Convert a webpage to an image",
    "homepage": "https://github.com/spatie/browsershot",
    "keywords":
        [
            "convert",
            "webpage",
            "image",
            "screenshot",
            "browser",
            "phantomjs"
        ],
    "license": "MIT",
    "authors": [
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "intervention/image": "2.*"
    },
    "bin": [
        "bin/phantomjs",
        "bin/phantomjs_macosx"
    ],
    "require-dev": {
        "phpspec/phpspec": "~2.1"
    },
    "autoload": {
        "psr-0": {
            "Spatie\\Browsershot": "src/"
        }
    },
    "minimum-stability": "dev"
}
